<Pane fx:id="mainPane" prefHeight="800" prefWidth="1600.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainMenu">
    <VBox alignment="CENTER" layoutX="384.0" layoutY="24.0" prefHeight="633.0" prefWidth="814.0" spacing="25.0"
          stylesheets="@../css/style.css">
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Stronghold Crusader" textAlignment="CENTER"
                  wrappingWidth="475.1159133911133">
                <font>
                    <Font size="96.0"/>
                </font>
                <fill>
                    <LinearGradient cycleMethod="REPEAT" endX="1.0" endY="1.0">
                        <stops>
                            <Stop>
                                <color>
                                    <Color/>
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color red="1.0" green="0.11851851642131805" blue="0.11851851642131805"/>
                                </color>
                            </Stop>
                        </stops>
                    </LinearGradient>
                </fill>
            </Text>
            <Button fx:id="profileMenu" maxWidth="354.0" mnemonicParsing="false" onMouseClicked="#enterProfileMenu"
                    prefHeight="50.0" prefWidth="300.0" text="Profile Menu"/>
            <Button fx:id="changeEnvironmentMenu" maxWidth="418.0" mnemonicParsing="false"
                    onMouseClicked="#enterChangeEnvironmentMenu" prefHeight="51.0" prefWidth="300.0"
                    text="Change Environment"/>
            <Button fx:id="help" maxWidth="418.0" mnemonicParsing="false" onMouseClicked="#help" prefHeight="50.0"
                    prefWidth="300.0" text="Help"/>
            <Button fx:id="back" mnemonicParsing="false" onMouseClicked="#back" prefHeight="50.0" prefWidth="300.0"
                    text="Back"/>
            <Button fx:id="chatMenu" mnemonicParsing="false"  prefHeight="50.0" prefWidth="300.0"
                    text="Chat Room"/>

        </children>
    </VBox>
</Pane>
