<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ChangeEnvironmentMenu">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Label text="rows:" />
                <ChoiceBox fx:id="rows" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label text="map:" />
                <ChoiceBox fx:id="map" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label text="turns:" />
                <ChoiceBox fx:id="turns" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label text="players:" />
                <TextArea fx:id="players" prefHeight="181.0" prefWidth="101.0" />
            </HBox>
            <Button onMouseClicked="#startGame" text="start">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button onMouseClicked="#back" text="back">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </VBox>
    </center>

</BorderPane>
