<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LoginMenu"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Register Menu" />
            <HBox alignment="CENTER" spacing="20">
                <Label text="username:" />
                <TextField fx:id="username" promptText="username" />
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Label text="password:" />
                <PasswordField fx:id="password" promptText="password" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button onMouseClicked="#enterMainMenu" text="log in">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor></Button>
                <Button alignment="CENTER" onMouseClicked="#back" text="back">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor></Button>
                <Button alignment="CENTER" onMouseClicked="#forgetPassword" text="forgot my password">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor></Button>
            </HBox>
        </VBox>
    </center>

</BorderPane>
